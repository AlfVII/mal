{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://openmagnetics.com/schemas/inputs.json",
    "title": "inputs",
    "description": "The description of the inputs that can be used to design a Magnetic",
    "type": "object",
    "properties": {
        "operationPoints":{
            "description": "Data describing the operation points",
            "title": "operationPoints",
            "type": "array",
            "items": {                
                "$ref": "#/$defs/operationPoint"
            },
            "minItems": 1
        },
        "designRequirements":{
            "description": "Data describing the design requirements",
            "title": "designRequirements",             
            "$ref": "/schemas/inputs/designRequirements.json"
        }
    },
    "required": ["operationPoints", "designRequirements"],

    "$defs": {
        "operationPoint":{
            "description": "Data describing one operation point, including the operation conditions and the excitations for all ports",
            "title": "operationPoint",
            "type": "object",
            "properties": {
                "name":{
                    "description": "Name describing this operation point",
                    "type": "string"
                },
                "conditions":{
                    "title": "operationConditions",
                    "$ref": "/schemas/inputs/operationConditions.json"
                },
                "windingExcitations": {
                    "title": "excitations",
                    "type": "array",
                    "items": {
                        "title": "OperationPointExcitationPerWinding",
                        "description": "Data describing the excitation of one port of a magnetic for a given operation point",
                        "type": "object",
                        "properties": {
                            "winding":{
                                "type": "string"
                            },
                            "excitation":{
                                "description": "Data describing the excitation of the winding",
                                "$ref": "/schemas/inputs/operationPointExcitation.json"
                            }
                        },
                        "required": ["winding", "excitation"]
                    },
                    "minItems": 1
                }
            },
            "required": ["conditions", "windingExcitations"]
        }
    }
}