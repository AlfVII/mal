{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://openmagnetics.com/schemas/magnetic/core/bobbin.json",
    "title": "core/bobbin",
    "description": "A shape for the magnetic cores",
    "type": "object",
    "properties": {
        "type": {
            "description": "The type of a bobbin",
            "type": "string",
            "enum": ["standard", "custom"]
        },
        "family": {
            "description": "The family of a bobbin",
            "type": "string",
            "enum": ["u", "e", "etd", "eer", "p", "rm", "ep", "pm", "el", "er", "pq", "efd", "ec"]
        },
        "manufacturerInfo": {
            "$ref": "/schemas/utils.json#/$defs/manufacturerInfo"
        },
        "name": {
            "description": "The name of a bobbin, according to EN 62317",
            "type": "string"
        },
        "shape": {
            "description": "The name of a bobbin that this bobbin belongs to",
            "type": "string"
        },
        "familySubtype": {
            "description": "The subtype of the shape, in case there are more than one",
            "type": "string"
        },
        "dimensions": {
            "description": "The dimensions of a bobbin, keys must be as defined in EN 62317",
            "type": "object",
            "additionalProperties": {
                "oneOf": [
                    {"$ref": "/schemas/utils.json#/$defs/dimensionWithTolerance"},
                    {
                        "type": "number"
                    }
                ]
            }
        },
        "processedData": {
            "description": "TBD, add separators",
            "type": "object",
            "properties": {
                "wallThickness": {
                    "description": "The thicknes of the walls that hold the wire on both sides of the column",
                    "type": "number",
                    "minimum": 0
                },
                "columnThickness": {
                    "description": "The thicknes of the central column wall, where the wire is wound",
                    "type": "number",
                    "minimum": 0
                }
            }
        }
    },
    "required": ["type", "family"]
}