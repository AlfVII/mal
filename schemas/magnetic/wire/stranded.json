{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://openmagnetics.com/schemas/magnetic/wire/stranded.json",
    "title": "wire/stranded",
    "description": "The description of a strand magnet wire",
    "type": "object",
    "properties": {
        "name": {
            "description": "The name of wire",
            "type": "string"
        },
        "type": {
            "description": "The type of wire",
            "type": "string",
            "const": "litz"
        },
        "standard": {
            "description": "The standard of wire",
            "title": "wireStandard",
            "type": "string",
            "enum": ["IEC 60317", "JIS C3202", "NEMA MW 1000 C"]
        },
        "standardName": {
            "description": "Name according to the standard of wire",
            "type": "string"
        },
        "manufacturerInfo": {
            "$ref": "/schemas/utils.json#/$defs/manufacturerInfo"
        },
        "strand": {
            "description": "The wire used as strands",
            "oneOf": [
                {"title": "wireSolid", "$ref": "/schemas/magnetic/wire/solid.json"},
                {
                    "description": "The name of the wire used as strand",
                    "type": "string"
                }
            ]
        },
        "numberConductors": {
            "description": "The number of conductors in the wire",
            "type": "number",
            "exclusiveMinimum": 1
        },
        "outerDiameter": {
            "description": "The outer diameter of the wire, in m",
            "$ref": "/schemas/utils.json#/$defs/dimensionWithTolerance"
        },
        "coating": {
            "title": "CoatingDataOrNameUnion",
            "oneOf": [
                {"$ref": "/schemas/magnetic/insulation/wireCoating.json"},
                {
                    "description": "The name of the coating used in the wire",
                    "type": "string"
                }
            ]
        }
    },
    "required": ["type", "strand", "numberConductors", "outerDiameter", "coating"]
}